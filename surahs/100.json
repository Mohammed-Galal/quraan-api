
    {
      "id": 100,
      "name": {
        "AR": "العاديات",
        "EN": ["Al-Aadiyaat", "The Chargers"]
      },
      "versesLength": 11,
      "verses": [{
            "AR_text": "بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيمِ وَٱلْعَٰدِيَٰتِ ضَبْحًا",
            "tafseer": "أقسم الله تعالى بالخيل الجاريات في سبيله نحو العدوِّ، حين يظهر صوتها من سرعة عَدْوِها. ولا يجوز للمخلوق أن يقسم إلا بالله، فإن القسم بغير الله شرك.",
            "EN_text": "By the racers, panting,",
            "tajweed": [{
            "from": 41,
            "to": 42,
            "rule": "hamzat_wasl"
          },{
            "from": 46,
            "to": 47,
            "rule": "madd_2"
          },{
            "from": 51,
            "to": 52,
            "rule": "madd_2"
          },{
            "from": 57,
            "to": 59,
            "rule": "qalqalah"
          }]
          },{
            "AR_text": "فَٱلْمُورِيَٰتِ قَدْحًا",
            "tafseer": "فالخيل اللاتي تنقدح النار من صلابة حوافرها؛ من شدَّة عَدْوها.",
            "EN_text": "And the producers of sparks [when] striking",
            "tajweed": [{
            "from": 2,
            "to": 3,
            "rule": "hamzat_wasl"
          },{
            "from": 12,
            "to": 13,
            "rule": "madd_2"
          },{
            "from": 18,
            "to": 20,
            "rule": "qalqalah"
          }]
          },{
            "AR_text": "فَٱلْمُغِيرَٰتِ صُبْحًا",
            "tafseer": "فالمغيرات على الأعداء عند الصبح.",
            "EN_text": "And the chargers at dawn,",
            "tajweed": [{
            "from": 2,
            "to": 3,
            "rule": "hamzat_wasl"
          },{
            "from": 12,
            "to": 13,
            "rule": "madd_2"
          },{
            "from": 18,
            "to": 20,
            "rule": "qalqalah"
          }]
          },{
            "AR_text": "فَأَثَرْنَ بِهِۦ نَقْعًا",
            "tafseer": "فهيَّجْنَ بهذا العَدْو غبارًا.",
            "EN_text": "Stirring up thereby [clouds of] dust,",
            "tajweed": [{
            "from": 15,
            "to": 16,
            "rule": "madd_2"
          },{
            "from": 19,
            "to": 21,
            "rule": "qalqalah"
          }]
          },{
            "AR_text": "فَوَسَطْنَ بِهِۦ جَمْعًا",
            "tafseer": "فتوسَّطن بركبانهن جموع الأعداء.",
            "EN_text": "Arriving thereby in the center collectively,",
            "tajweed": [{
            "from": 6,
            "to": 8,
            "rule": "qalqalah"
          },{
            "from": 15,
            "to": 16,
            "rule": "madd_2"
          }]
          },{
            "AR_text": "إِنَّ ٱلْإِنسَٰنَ لِرَبِّهِۦ لَكَنُودٌ",
            "tafseer": "إن الإنسان لِنعم ربه لَجحود، وإنه بجحوده ذلك لمقر. وإنه لحب المال لشديد.",
            "EN_text": "Indeed mankind, to his Lord, is ungrateful.",
            "tajweed": [{
            "from": 2,
            "to": 5,
            "rule": "ghunnah"
          },{
            "from": 6,
            "to": 7,
            "rule": "hamzat_wasl"
          },{
            "from": 11,
